#!/usr/bin/env php
<?php

require_once dirname(__DIR__) . '/vendor/autoload.php';

use Application\Console\ConsoleApplication;
use Application\Console\ControllerCommand;
use Application\Console\ControllersCommand;

putenv("ENV=dev");

$app = new ConsoleApplication([
    dirname(__DIR__) . '/config/config.php',
    dirname(__DIR__) . '/config/database.php'
]);

$c = $app->getContainer();

$app->add(new ControllerCommand());
$app->add(new ControllersCommand($c));
$app -> run();
